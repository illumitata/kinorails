<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Screening</th>
      <th>Identifier</th>
      <th> Reserved seats </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.id %></td>
        <% if reservation.user_id == NIL %>
          <td>Guest</td>
        <% else %>
          <td><%= reservation.user.username  %></td>
        <%end%>
        <td><%= reservation.screening_id %></td>
        <td><%= reservation.identifier %></td>
        <td> </td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
